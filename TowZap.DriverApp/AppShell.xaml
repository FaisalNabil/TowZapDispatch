<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TowZap.DriverApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:views="clr-namespace:TowZap.DriverApp.Views"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TowZap.DriverApp"
    Shell.FlyoutBehavior="Disabled"
    Title="TowZap">

    <!-- ✅ Register login as separate route -->
    <ShellContent Route="LoginPage"
                  ContentTemplate="{DataTemplate views:LoginPage}"
                  IsVisible="False" />

    <TabBar>
        <ShellContent
        Title="Home"
        Icon="home.png"
        ContentTemplate="{DataTemplate views:DashboardPage}"
        Route="DashboardPage" />
        <!-- ✅ Add this -->

        <ShellContent
        Title="Activity"
        Icon="activity.png"
        ContentTemplate="{DataTemplate views:ActivityPage}"
        Route="ActivityPage" />

        <ShellContent
        Title="Account"
        Icon="settings.png"
        ContentTemplate="{DataTemplate views:SettingsPage}"
        Route="SettingsPage" />
    </TabBar>

</Shell>
