<Shell
    x:Class="TowZap.DriverApp.MainShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:TowZap.DriverApp.Views"
    xmlns:controls="clr-namespace:TowZap.DriverApp.Controls"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Home"
            Route="DashboardPage"
            Icon="home.png"
            ContentTemplate="{DataTemplate views:DashboardPage}" />

        <ShellContent
            Title="Activity"
            Route="ActivityPage"
            Icon="activity.png"
            ContentTemplate="{DataTemplate views:ActivityPage}" />

        <ShellContent
            Title="Account"
            Route="SettingsPage"
            Icon="settings.png"
            ContentTemplate="{DataTemplate views:SettingsPage}" />
    </TabBar>
</Shell>
