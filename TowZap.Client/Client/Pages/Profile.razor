@page "/profile"
@inject UserContext UserContext

<h4 class="mb-3"><i class="fas fa-user-circle me-2"></i> Profile</h4>

<div class="card p-4">
    <div class="mb-3">
        <label class="form-label"><i class="fas fa-user me-1"></i> Full Name</label>
        <input class="form-control" value="@UserContext.FullName" disabled />
    </div>
    <div class="mb-3">
        <label class="form-label"><i class="fas fa-building me-1"></i> Company</label>
        <input class="form-control" value="@UserContext.CompanyName" disabled />
    </div>
    <div class="mb-3">
        <label class="form-label"><i class="fas fa-user-tag me-1"></i> Role</label>
        <input class="form-control" value="@UserContext.Role" disabled />
    </div>
    <a class="btn btn-primary" href="/change-password">
        <i class="fas fa-key me-2"></i> Change Password
    </a>
</div>
